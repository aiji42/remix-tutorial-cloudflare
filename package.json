{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npm run build:css && remix build",
    "dev": "concurrently \"npm run dev:css\" \"remix watch\"",
    "postinstall": "remix setup cloudflare-workers",
    "build:worker": "NODE_ENV=production node worker.build.js",
    "dev:worker": "webpack",
    "start": "miniflare --build-command \"npm run dev:worker\" --watch",
    "deploy": "npm run build && wrangler publish",
    "prisma:reset": "prisma db push --schema=./prisma/schema.reset.prisma",
    "prisma:up": "prisma db push",
    "prisma:seed": "prisma db seed",
    "prisma:build": "PRISMA_CLIENT_ENGINE_TYPE='dataproxy' prisma generate",
    "build:css": "tailwindcss -o ./app/tailwind.css",
    "dev:css": "tailwindcss -o ./app/tailwind.css --watch"
  },
  "dependencies": {
    "@geist-ui/react": "^2.2.0",
    "@prisma/client": "3.5.0",
    "@remix-run/cloudflare-workers": "^1.0.4",
    "@remix-run/react": "^1.0.4",
    "@supabase/supabase-js": "^1.28.2",
    "prisma": "3.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.0.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@remix-run/dev": "^1.0.4",
    "@types/faker": "^5.5.9",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^6.4.0",
    "faker": "^5.5.3",
    "miniflare": "2.0.0-next.3",
    "prettier": "^2.5.0",
    "tailwindcss": "^2.2.19",
    "ts-node": "^10.4.0",
    "typescript": "^4.1.2",
    "webpack": "^5.64.4",
    "webpack-cli": "^4.9.1"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "main": "dist/worker.js",
  "prisma": {
    "seed": "ts-node ./prisma/seed.ts"
  }
}
