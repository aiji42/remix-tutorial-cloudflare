{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "remix build",
    "dev": "remix watch",
    "postinstall": "remix setup cloudflare-workers",
    "build:worker": "NODE_ENV=production node worker.build.js",
    "dev:worker": "node worker.build.js",
    "start": "miniflare --build-command \"npm run dev:worker\" --watch",
    "deploy": "npm run build && wrangler publish",
    "prisma:init": "prisma db push && prisma db seed",
    "prisma:build": "PRISMA_CLIENT_ENGINE_TYPE='dataproxy' prisma generate"
  },
  "dependencies": {
    "@geist-ui/react": "^2.2.0",
    "@prisma/client": "3.5.0",
    "@remix-run/cloudflare-workers": "^1.0.4",
    "@remix-run/react": "^1.0.4",
    "prisma": "3.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.0.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@remix-run/dev": "^1.0.4",
    "@types/faker": "^5.5.9",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "esbuild": "0.13.14",
    "esbuild-plugin-alias": "^0.2.1",
    "faker": "^5.5.3",
    "miniflare": "2.0.0-next.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "main": "dist/worker.js",
  "prisma": {
    "seed": "ts-node ./prisma/seed.ts"
  }
}
